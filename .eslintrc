{
  "root": true,
  "extends":"eslint:recommended",
  "parser": "babel-eslint",
  "plugins": [
    "babel",
    "react",
    "mocha",
    "material-ui",
    "import",
    "flowtype"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "no-console":"off",
    "array-bracket-spacing": ["warn", "never"],
    "arrow-spacing": "warn",
    "arrow-parens": "warn",
    "block-spacing": ["warn", "always"],
    "brace-style": "warn",
    "comma-dangle": ["warn", "always-multiline"],
    "comma-spacing": ["warn", {
      "before": false,
      "after": true
    }],
    "comma-style": ["warn", "last"],
    "computed-property-spacing": ["warn", "never"],
    "consistent-this": ["warn", "self"],
    "consistent-return": "off", // Wishlist, one day
    "dot-notation": "warn",
    "dot-location": ["warn", "property"],
    "eqeqeq": ["off", "smart"],
    "eol-last": "warn",
    "indent": ["warn", 2, {
      "SwitchCase": 1
    }],
    "id-blacklist": ["off", "e"],
    "jsx-quotes": ["warn", "prefer-double"],
    "keyword-spacing": "warn",
    "key-spacing": "warn",
    "max-len": ["off", 120, 4],
    "new-cap": ["off", {
      "capIsNew": true,
      "newIsCap": true
    }], // Wishlist, one day
    "no-unused-expressions": "off",
    "no-redeclare":"off",
    "no-unused-vars": "off",
    "no-shadow": "off", // Wishlist, one day
    "no-spaced-func": "warn",
    "no-mixed-spaces-and-tabs": "warn",
    "no-multiple-empty-lines": "warn",
    "no-multi-spaces": "off",
    "no-undef": "off",
    "no-empty-pattern": "warn",
    "no-dupe-keys": "warn",
    "no-dupe-args": "warn",
    "no-duplicate-case": "warn",
    "no-cond-assign": "warn",
    "no-extra-semi": "warn",
    "no-extra-boolean-cast": "warn",
    "no-trailing-spaces": "warn",
    "no-underscore-dangle": "off",
    "no-unneeded-ternary": "warn",
    "no-unreachable": "warn",
    "no-useless-escape": "warn",
    "no-var": "off",
    "one-var": ["off", "never"],
    "operator-linebreak": ["warn", "after"],
    "padded-blocks": ["warn", "never"],
    "prefer-arrow-callback": "off", // Wishlist, one day
    "prefer-const": "off",
    "prefer-template": "warn",
    "quotes": ["warn", "single", "avoid-escape"],
    "semi": ["warn", "always"],
    "space-before-blocks": ["warn", "always"],
    "space-before-function-paren": ["warn", "never"],
    "space-infix-ops": "warn",
    "space-unary-ops": ["warn", {
      "words": true,
      "nonwords": false
    }],
    "spaced-comment": "warn",
    "yoda": "warn",
    "babel/object-curly-spacing": ["warn", "never"],
    "generator-star-spacing": "warn",
    "flowtype/object-type-delimiter": "warn",
    "react/display-name": "warn",
    "react/jsx-boolean-value": ["warn", "always"],
    "react/jsx-closing-bracket-location": "warn",
    "react/jsx-curly-spacing": "warn",
    "react/jsx-equals-spacing": "warn",
    "react/jsx-filename-extension": ["off", {
      "extensions": [".js"]
    }],
    "react/jsx-first-prop-new-line": ["warn", "multiline"],
    "react/jsx-handler-names": "off",
    "react/jsx-indent": ["warn", 2],
    "react/jsx-indent-props": ["warn", 2],
    "react/jsx-max-props-per-line": ["off", {
      "maximum": 3
    }],
    "react/jsx-no-comment-textnodes": "warn",
    "react/jsx-no-duplicate-props": "warn",
    "react/jsx-no-undef": "warn",
    "react/jsx-pascal-case": "warn",
    "react/jsx-space-before-closing": "warn",
    "react/jsx-uses-react": "warn",
    "react/jsx-uses-vars": "warn",
    "react/jsx-wrap-multilines": "warn",
    "react/no-danger": "off",
    "react/no-deprecated": "warn",
    "react/no-did-mount-set-state": "warn",
    "react/no-did-update-set-state": "warn",
    "react/no-direct-mutation-state": "warn",
    "react/no-multi-comp": "off", // Wishlist, one day
    "react/no-render-return-value": "warn",
    "react/no-is-mounted": "warn",
    "react/no-unknown-property": "warn",
    "react/prefer-arrow-callback": "off", // Wishlist, one day
    "react/prefer-es6-class": "off",
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "warn",
    "import/extensions": "off",
    "react/require-render-return": "warn",
    "react/self-closing-comp": "warn",
    "react/sort-comp": "off",
    "react/sort-prop-types": "off",
    "material-ui/docgen-ignore-before-comment": "off",
    "mocha/handle-done-callback": "warn",
    "mocha/no-exclusive-tests": "warn",
    "mocha/no-global-tests": "warn",
    "mocha/no-pending-tests": "warn",
    "mocha/no-skipped-tests": "warn",

    "react/no-string-refs": "warn", // Wishlist, one day.

    "strict": "off",
    "no-case-declarations": "off",
    "react/jsx-key": "off",
    "react/jsx-no-bind": "off",
    "react/jsx-no-literals": "off",
    "react/jsx-no-target-blank": "off",
    "react/jsx-sort-props": "off",
    "react/no-set-state": "off",
    "react/forbid-prop-types": "off",
    "react/prefer-stateless-function": "off",
    "react/require-optimization": "off",
    "mocha/no-synchronous-tests": "off",
    "mocha/valid-suite-description": "off",
    "mocha/valid-test-description": "off",
    "babel/object-shorthand": "off",
    "babel/new-cap": "off"
  },
  "globals": {}
}
